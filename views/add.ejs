<main>

    <body style="background-color: white;">   
        <div class="container">
            <div class="row my-3">
                <div class="col-md-8 mb-4"> 
                    <form class="form-horizontal" action="/new" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="control-label col-sm-2">ชื่ออาหาร</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="Name"required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ราคา</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" name="Price"required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-10">วัตถุดิบ(แต่ละวัตถุดิบให้เว้นบรรทัด)</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" name="Ingredients"required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ภาพอาาหาร</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" name="Image">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-10">วิธีทำ(แต่ละขั้นตอนให้เว้นบรรทัด)</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" name="HowToCook"required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">เวลาในการทำ(นาที)</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" name="TimeToCook"required>
                            </div>
                        </div>
                             <div class="form-group">
                                <label class="control-label col-sm-2" for="hardness">ความยาก</label>
                                <div class="col-sm-10">
                                    <select id="hardness" name="Hardness" class="form-control"required>
                                        <option value="">Select Difficulty</option>
                                        <option value="1">ง่าย</option>
                                        <option value="2">ปานกลาง</option>
                                        <option value="3">ยาก</option>
                                        <option value="4">ผู้ชำนาญการ</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">วันที่</label>
                                <div class="col-sm-10">
                                    <%const currentDate = new Date().toISOString().split('T')[0];%> 
                                    <input type="date" class="form-control" name="Date" value="<%= currentDate %>" readonly>
                                <label class="control-label col-sm-2">ชื่อผู้เขียนเมนู</label>
                                    <input type="text" class="form-control" name="Author" value="<%= userData.displayname %>" readonly>
                                </div>
                            </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">บันทึก</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
