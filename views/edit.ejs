        <div class="container">
            <h2>จัดการเมนูของคุณ</h2>
            <p>เพิ่ม ลบ แก้ไขข้อมูลในฐานข้อมูล</p>            
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width : 250px;">ชื่อสินค้า</th>
                        <th style="width : 100px;">ราคา</th>
                        <th style="max-width: 200px;">วันที่ลง</th>
                        <th style="max-width: 50px;">ลบ</th>
                        <th style="max-width: 50px;">แก้ไข</th>
                    </tr>
                </thead>
                <tbody>
                    <% Object.values(recipes).forEach(function(item){%>
                    <tr>
                        <td><%= item.Name%></td>
                        <td><%= item.Price%></td>
                        <td><%= item.Date%></td>
                        <td><form action="/delete" method="post">
                          <input type="hidden" name="delete_id" value="<%= item._id %>">
                          <button type="submit" class="btn btn-danger"onclick="return confirm('ลบละนะ')">ลบ</button>
                        </form>
                        </td>
                        <td><a class="btn btn-primary" href="/edit/<%= item._id%>">แก้ไข</a></td>
                    <% }) %>    
                    </tr>
                </tbody>
            </table>
        </div>
