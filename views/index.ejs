<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">WongNok</h1>
        <p class="lead text-muted">เมนูอาหาร</p>
        <p>
          <form id="searchForm" action="/search" method="get">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <select class="form-select" id="searchCriterion" name="criterion">
                  <option value="Name">ชื่อเมนู</option>
                  <option value="Author">ผู้เขียน</option>
                  <option value="Ingredients">ส่วนผสม</option>
                </select>
              </div>
              <input type="text" class="form-control" name="query" placeholder="Search...">
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <label class="input-group-text" for="sortOrder">Sort By</label>
              </div>
              <select class="form-select" id="sortOrder" name="sort">
                <option value="New">Newest</option>
                <option value="Like">Most Liked</option>
              </select>
            </div>
            <button class="btn btn-outline-secondary" type="submit">Search</button>
          </form>
        </p>
      </div>
    </div>
  </section>
        </p>
      </div>
    </div>
  </section>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% Object.values(recipes).forEach(function(item){ %>
          <div class="col">
            <div class="card shadow-sm">
              <!-- Your card content -->
              <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="/images/food/<%= item.Image %>" role="img" onerror="this.onerror=null;this.src='/images/food/0.jpg';"  >
              <figcaption><%= item.Date%></figcaption>
              <p>โดย<%= item.Author%> </p>
              <div class="card-body">
                <p class="card-text"><a href="/recipe/<%= item._id%>" style="font-size: 24px;"><b><%= item.Name %></b></a></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">ความยาก</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= item.Hardness %></button>
                  </div>
                  <small class="text-muted">ระยะเวลา<%= Math.floor(item.TimeToCook/60) %>ชั่วโมง<%=item.TimeToCook%60%>นาที </small>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <div style="text-align: right; margin-top: 20px;">
      <% if (currentPage > 1) { %>
          <a href="/?page=<%= currentPage - 1 %>" style="display: inline-block; padding: 10px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px;">Previous</a>
      <% } %>
      <span style="display: inline-block; padding: 10px; color: #007bff;">Page <%= currentPage %> of <%= totalPages %></span>
      <% if (currentPage < totalPages) { %>
          <a href="/?page=<%= currentPage + 1 %>" style="display: inline-block; margin-left: 10px; padding: 10px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px;">Next</a>
      <% } %>
  </div>
  

</main>

